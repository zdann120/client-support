br/
.container
  .row
    .col-sm-1
    .col-sm-10
      .card
        .card-header
          .font-weight-bold All Users
        .card-body
          - @users.each do |user|
            .row
              .col-sm-3
                = user.username
              .col-sm-6
                = user.email
              .col-sm-3
                = link_to 'Edit', admin_edit_path(user)
                | \
                = link_to 'Destroy', admin_edit_path(user), method: :delete, data: { confirm: 'Are you sure?' }
              hr
    .col-sm-1
